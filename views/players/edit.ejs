<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
  <h1>Edit Player</h1>
  <form id="add-player" action="/players/<%= player._id %>?_method=PUT" autocomplete="off" method="POST">
    <label for="player-name">Name:</label>
    <input type="text" name="name" value="<%= player.name %> "
    placeholder="Your player's name here...">
    <label for="player-position">Position:</label>
    <select name="position" id="player-position">
      <option value="<%= player.postion %> "></option>
      <option value="Goalkeeper">Goalkeeper</option>
      <option value="Right Fullback">Right Fullback</option>
      <option value="Left Fullback">Left Fullback</option>
      <option value="Center Back">Center Back</option>
      <option value="Right Midfielder">Right Midfielder</option>
      <option value="Left Midfielder">Left Midfielder</option>
      <option value="Center Midfielder">Center Midfielder</option>
      <option value="Striker">Striker</option>
    </select>  
    <label for="starting-position">Status:</label>
    <select name="status" id="player-status">
      <option value="<%= player.status %> "></option>
      <option value="Starting">Starting</option>
      <option value="Bench">Bench</option>
    </select>
    <button type="submit">Edit Player</button>
  </form>
</section>

<%- include('../partials/footer') %>